{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "maxSize": 2097152,
    "ignoreUnknown": true,
    "includes": [
      "src/**/*.ts",
      "src/**/*.js",
      "__tests__/**/*.ts",
      "*.js",
      "*.ts"
    ],
    "experimentalScannerIgnores": [
      "node_modules",
      "dist/**",
      "build",
      "coverage",
      "lib/**",
      ".next",
      "*.min.js"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "warn",
        "useArrowFunction": "error"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useConst": "error",
        "useTemplate": "error",
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
