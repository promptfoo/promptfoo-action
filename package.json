{
  "name": "promptfoo-action",
  "version": "1.0.0",
  "description": "GitHub Action for evaluating LLM outputs with promptfoo",
  "author": "Ian Webster",
  "license": "MIT",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "biome": "biome check --write .",
    "biome:check": "biome check .",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "all": "npm run build && npm run biome:check && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/io": "^1.1.3",
    "dotenv": "^17.2.1",
    "glob": "^10.4.5",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/cache-manager": "^4.0.6",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@vercel/ncc": "^0.38.3",
    "jest": "^30.0.5",
    "js-yaml": "^4.1.0",
    "promptfoo": "^0.117.9",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
