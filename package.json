{
  "name": "promptfoo-action",
  "version": "1.0.0",
  "description": "GitHub Action for evaluating LLM outputs with promptfoo",
  "author": "Ian Webster",
  "license": "MIT",
  "main": "lib/main.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf lib dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "lint:fix": "eslint --fix src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "preinstall": "npx only-allow npm",
    "prepare": "husky install",
    "prepublishOnly": "npm run all",
    "all": "npm run clean && npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "promptfoo",
    "llm",
    "testing"
  ],
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/exec": "1.1.1",
    "@actions/github": "6.0.0",
    "@actions/io": "1.1.3",
    "glob": "10.4.5",
    "simple-git": "3.27.0"
  },
  "devDependencies": {
    "@eslint/js": "8.56.0",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "@types/cache-manager": "4.0.6",
    "@types/jest": "29.5.12",
    "@types/node": "22.14.0",
    "@vercel/ncc": "0.38.1",
    "eslint": "8.57.0",
    "eslint-plugin-github": "4.10.1",
    "eslint-plugin-jest": "27.9.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "js-yaml": "4.1.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "promptfoo": "0.104.3",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.2",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
