{
  "name": "promptfoo-action",
  "version": "1.2.1",
  "description": "GitHub Action for evaluating LLM outputs with promptfoo",
  "author": "Ian Webster",
  "license": "MIT",
  "main": "lib/main.js",
  "packageManager": "npm@11.11.0",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "biome": "biome check --write .",
    "biome:check": "biome check .",
    "package": "npm run typecheck && node esbuild.config.mjs",
    "test": "vitest run --coverage",
    "all": "npm run build && npm run biome:check && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/promptfoo/promptfoo-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^3.0.0",
    "@actions/github": "^9.0.0",
    "@actions/io": "^3.0.2",
    "dotenv": "^17.3.1",
    "glob": "^13.0.6",
    "simple-git": "^3.32.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@swc/core": "^1.15.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "js-yaml": "^4.1.1",
    "promptfoo": "0.120.25",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=11.6.4"
  }
}
