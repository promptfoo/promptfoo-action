{
  "name": "promptfoo-action",
  "version": "1.2.0",
  "description": "GitHub Action for evaluating LLM outputs with promptfoo",
  "author": "Ian Webster",
  "license": "MIT",
  "main": "lib/main.js",
  "packageManager": "npm@11.7.0",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "biome": "biome check --write .",
    "biome:check": "biome check .",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "all": "npm run build && npm run biome:check && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/promptfoo/promptfoo-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "dependencies": {
    "@actions/core": "^2.0.0",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^6.0.1",
    "@actions/io": "^2.0.0",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@swc/core": "^1.15.1",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@vercel/ncc": "^0.38.4",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "promptfoo": "0.120.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=11.6.4"
  }
}
